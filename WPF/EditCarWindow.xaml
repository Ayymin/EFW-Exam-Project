<Window x:Class="WPF.EditCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="EditCarWindow" Height="450" Width="800">
    <Grid>
        <TextBlock TextWrapping="Wrap" Text="TextBlock"/>
        <TextBox x:Name="NumberPlateTBox" HorizontalAlignment="Left" Height="25" Margin="218,147,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="94"/>
        <Label x:Name="CarNumberPlateLb" Content="Number Plate" HorizontalAlignment="Left" Margin="123,147,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.089,-0.035"/>
        <Label Content="Amount of Passengers&#xD;&#xA;" HorizontalAlignment="Left" Margin="71,183,0,0" VerticalAlignment="Top" Width="135"/>
        <TextBox x:Name="PassengerAmountTBox" HorizontalAlignment="Left" Margin="218,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="94" Height="31"/>
        <Button Content="Save Changes" HorizontalAlignment="Left" Margin="226,250,0,0" VerticalAlignment="Top" Click="EditCarButton"/>

    </Grid>
</Window>
