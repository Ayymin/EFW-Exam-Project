<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="144*"/>
            <RowDefinition Height="73*"/>
        </Grid.RowDefinitions>
        <Button Content="Button" HorizontalAlignment="Left" Margin="335,49,0,0" VerticalAlignment="Top" Click="Button_Click" RenderTransformOrigin="-1.673,-4.486"/>
        <ListBox x:Name="MyListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="335,86,351,70" SelectionChanged="MyListBox_SelectionChanged" Grid.RowSpan="2"/>

        <ListBox x:Name="Ferry_Cars" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="487,86,198,53" Grid.RowSpan="2"/>
        <Button x:Name="PassengerButton" Content="Add Passenger" HorizontalAlignment="Left" Margin="75,86,0,0" VerticalAlignment="Top" Height="19" Width="97" Click="PassengerButton_Click"/>
        <Button x:Name="Add_Car" Content="CarButton" HorizontalAlignment="Left" Margin="75,127,0,0" VerticalAlignment="Top" Height="19" Width="97" Click="Button_Click_1"/>


    </Grid>

</Window>
