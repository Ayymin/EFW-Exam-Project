<Window x:Class="WPF.CreateCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="CreateCarWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="GuestListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="36,72,622,21" SelectionChanged="GuestListBox_SelectionChanged"/>
        <Label x:Name="GuestLabel" Content="Label" HorizontalAlignment="Left" Margin="58,32,0,0" VerticalAlignment="Top" Width="98"/>
        <TextBox x:Name="NumberPlate" HorizontalAlignment="Left" Margin="391,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="Number_Plate" Content="Number Plate" HorizontalAlignment="Left" Margin="291,140,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.574,-0.168"/>
        <Button x:Name="AddGuestForCar" Content="Add To Car" HorizontalAlignment="Left" Margin="195,197,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.277,1.27" Click="AddToCar"/>
        <Button x:Name="AddCarToFerry" Content="Add To Ferry" HorizontalAlignment="Left" Margin="423,197,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
